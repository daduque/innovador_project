<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>

      <% if (locals.user) { %>
       
        <div class="text-end">
          <form action="/user/logout">
            <button type="submit" class="btn btn-dark">Logout <%= user.name %></button>
          </form>
        </div>
        <% } else { %>
          <div class="text-end">
            <form action="/user/login">
              <button type="submit" class="btn btn-outline-success">Login</button>
            </form>
          </div>
          
          <% } %>
       

      <h1><%= title %></h1>
      <p>Welcome to <%= title %></p>
    </header>

    <main>
      <section>
        <h2>Book Catalog</h2>
        <hr>
        <div class="book-block">
        <% books.forEach((book) => { %>
          <article >
            <img class="book-block__image" src="images/books/<%= book.cover %>" alt="<%= book.title %> cover" height="200">
            <h3 class="book-block__title"><%= book.title %></h3>
            <p class="book-block__info">by <%= book.author %></p>
            <p class="book-block__price">$<%= book.price %></p>
          </article>
        <% }); %>
        </div>

      </section>
    </main>

    <footer>

    </footer>

  </body>
</html>
